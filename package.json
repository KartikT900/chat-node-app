{
  "name": "chat-node-app",
  "version": "1.0.0",
  "description": "A Backend service for Chat App",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "dev": "nodemon index",
    "dev:test": "jest --detectOpenHandles --coverage --watchAll",
    "test": "jest --coverage --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lunacy001/chat-node-app.git"
  },
  "keywords": [
    "NodeJS",
    "Express",
    "PostgreSQL"
  ],
  "author": "Kartik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lunacy001/chat-node-app/issues"
  },
  "homepage": "https://github.com/Lunacy001/chat-node-app#readme",
  "dependencies": {
    "aws-sdk": "^2.756.0",
    "uuid": "8.3.2",
    "ejs": "3.1.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "http-status": "^0.2.5",
    "nodemon": "^2.0.4",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.19.3",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.4.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js",
      "src/controller/*.js",
      "src/helper/*.js",
      "src/models/*.js",
      "src/routes/*.js",
      "src/service/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  }
}
